{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Run all",
      "detail": "Runs a terragrunt command",
      "command": "terragrunt",
      "args": [
        "run-all",
        "${input:runAllCommand}",
        "--terragrunt-working-dir=src/targets/${input:target}",
        "--terragrunt-non-interactive"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "icon": {
        "color": "terminal.ansiBlue",
        "id": "arrow-circle-right"
      }
    },
    {
      "type": "shell",
      "label": "Apply",
      "detail": "Execute `terragrunt run-all apply` on a target",
      "command": "terragrunt",
      "args": [
        "run-all",
        "apply",
        "--terragrunt-working-dir=src/targets/${input:target}",
        "--terragrunt-non-interactive"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "icon": {
        "id": "play",
        "color": "terminal.ansiGreen"
      },
    },
    {
      "type": "shell",
      "label": "Destroy",
      "detail": "Execute `terragrunt run-all destroy` on a target",
      "command": "terragrunt",
      "args": [
        "run-all", 
        "destroy", 
        "--terragrunt-working-dir=src/targets/${input:target}", 
        "--terragrunt-non-interactive"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "icon": {
        "color": "terminal.ansiRed",
        "id": "stop"
      }
    }
  ],
  "inputs": [
    {
      "id": "target",
      "description": "Target to run",
      "type": "pickString",
      "options": [
        "k3d/dev/local",
        "aws/dev/eu-central-1",
        "aws/dev/us-west-1",
        "aws/dev/us-east-1"
      ],
      "default": "k3d/dev/local",
    },
    {
      "id": "runAllCommand",
      "description": "Run all command to execute",
      "type": "promptString"
    }
  ]
}
